.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-top: 20rpx;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
}
.indexContainer .header .search {
  position: relative;
  width: 100%;
  background: #ededed;
  padding-left: 60rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .search .placeholder {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  text-indent: -40rpx;
}
.indexContainer .header .username {
  width: 144rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #f00;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .scrollItem {
  position: relative;
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0 10rpx;
}
.indexContainer .navScroll .scrollItem.active::after {
  position: absolute;
  left: 0;
  bottom: 2rpx;
  content: "";
  display: block;
  height: 2rpx;
  width: 100%;
  background-color: #f00;
}

